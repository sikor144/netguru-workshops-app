- breadcrumb :student_payments
= link_to t('shared.add_new_item'), new_student_payment_path, class: 'btn btn-default'
%table.table.table-condensed
  %thead
    %tr
      %th= t('student_payment.columns.amount')
      %th= t('student_payment.columns.due_date')
      %th= t('student_payment.columns.payment_date')
      %th= t('student_payment.columns.student')
      %th= t('shared.actions')
  %tbody
    = render student_payments
